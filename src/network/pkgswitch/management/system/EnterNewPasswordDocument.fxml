<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16" fx:controller="network.pkgswitch.management.system.EnterNewPasswordDocumentController">
   <children>
      <Label layoutX="70.0" layoutY="60.0" text="Username:">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Label>
      <Label fx:id="lblUsername" layoutX="300.0" layoutY="60.0" prefHeight="20.0" prefWidth="201.0" text="---">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Label>
      <Label layoutX="70.0" layoutY="120.0" text="Old Password:">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Label>
      <Label layoutX="70.0" layoutY="180.0" text="New Password:">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Label>
      <PasswordField fx:id="pwdOldPassword" layoutX="300.0" layoutY="117.0">
         <font>
            <Font name="Times New Roman" size="16.0" />
         </font>
      </PasswordField>
      <PasswordField fx:id="pwdNewPassword" layoutX="300.0" layoutY="175.0">
         <font>
            <Font name="Times New Roman" size="16.0" />
         </font>
      </PasswordField>
      <Label layoutX="70.0" layoutY="240.0" text="Confirm Password:">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Label>
      <PasswordField fx:id="pwdConfirmPassword" layoutX="300.0" layoutY="235.0">
         <font>
            <Font name="Times New Roman" size="16.0" />
         </font>
      </PasswordField>
      <Button fx:id="btnChangePassword" layoutX="70.0" layoutY="313.0" mnemonicParsing="false" onAction="#btnChangePasswordAction" text="Change Password">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Button>
      <Button fx:id="btnCancel" layoutX="347.0" layoutY="312.0" mnemonicParsing="false" onAction="#btnCancelAction" prefHeight="34.0" prefWidth="153.0" text="Cancel">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
